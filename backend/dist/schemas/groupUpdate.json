{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/example.json",
    "type": "object",
    "properties": {
        "title": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "startTime": {
            "type": "string",
            "format": "date-time"
        },
        "endTime": {
            "type": "string",
            "format": "date-time"
        },
        "address": {
            "type": "string"
        },
        "cityId": {
            "anyOf": [
                {
                    "type": "number"
                },
                {
                    "type": "null"
                }
            ]
        },
        "isPrivate": {
            "type": "boolean"
        },
        "maxMembers": {
            "type": "number",
            "minimum": 1
        }
    },
    "additionalProperties": false,
    "required": []
}
