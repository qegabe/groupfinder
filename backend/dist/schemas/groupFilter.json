{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/example.json",
    "type": "object",
    "properties": {
        "title": {
            "type": "string"
        },
        "startTimeAfter": {
            "type": "string",
            "format": "date-time"
        },
        "startTimeBefore": {
            "type": "string",
            "format": "date-time"
        },
        "maxSize": {
            "type": "string",
            "pattern": "^[1-9][0-9]*$"
        },
        "hasGames": {
            "anyOf": [
                {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "pattern": "^[0-9]+$"
                    }
                },
                {
                    "type": "string",
                    "pattern": "^[0-9]+$"
                }
            ]
        },
        "hasUsers": {
            "anyOf": [
                {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "maxLength": 25
                    }
                },
                {
                    "type": "string",
                    "maxLength": 25
                }
            ]
        },
        "city": {
            "type": "string",
            "pattern": "^[0-9]+$"
        }
    },
    "additionalProperties": false,
    "required": []
}
